<coordinator-app name="Airline Analysis" timezone="America/New_York" xmlns="uri:oozie:coordinator:0.2">
    <action>
        <workflow>
            <app-path>${workflowAppUri}</app-path>
            <configuration>
                <property>
                    <name>inputDir</name>
                    <value>${inputDir}</value>
                </property>
                <property>
                    <name>outputDir</name>
                    <value>${outputDir}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>
